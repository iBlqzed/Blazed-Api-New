{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "outDir": "scripts",
        "experimentalDecorators": true,
        "declaration": true,
        "declarationDir": "scripts"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "scripts"
    ],
}